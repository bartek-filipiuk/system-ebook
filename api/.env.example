# Application
PROJECT_NAME="AI-Driven Development Framework API"
VERSION="1.0.0"
API_V1_PREFIX="/api/v1"
DEBUG=False

# Server
HOST=0.0.0.0
PORT=8000

# Database
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ai_dev_framework
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_dev_framework

# Authentication
ADMIN_TOKEN=your-super-secret-admin-token-here-change-in-production

# OpenRouter
OPENROUTER_API_KEY=your-openrouter-api-key-here

# LangFuse
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com  # or your self-hosted instance

# Rate Limiting
RATE_LIMIT_PER_SECOND=1

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Logging
LOG_LEVEL=INFO
